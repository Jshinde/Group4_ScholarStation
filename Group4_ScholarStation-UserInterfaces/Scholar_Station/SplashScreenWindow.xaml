<Window x:Class="Scholar_Station.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scholar_Station"
        mc:Ignorable="d"
        Title="SplashScreenWindow" Height="300" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <Grid.Background>
            <ImageBrush ImageSource="blue-wallpaper3.png"/>
        </Grid.Background>
        <Image x:Name="image" HorizontalAlignment="Left" Height="193" Margin="10,61,0,0" VerticalAlignment="Top" Width="280" Source="TrainStation.png"/>

    </Grid>
</Window>
